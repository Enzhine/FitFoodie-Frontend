<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Widget.FitFoodie.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">24dp</item>
        <item name="backgroundTint">@color/fitfoodie_blue</item>
        <item name="android:textColor">@color/white</item>

        <item name="android:minHeight">48dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

    <style name="Widget.FitFoodie.Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">24dp</item>
        <item name="backgroundTint">@color/fitfoodie_gray</item>
        <item name="android:textColor">@color/black</item>

        <item name="android:minHeight">48dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

    <style name="Widget.FitFoodie.Button.Action" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">24dp</item>
        <item name="backgroundTint">@color/fitfoodie_green</item>
        <item name="android:textColor">@color/white</item>

        <item name="android:minHeight">48dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

    <style name="Widget.FitFoodie.TextInputEdit" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="cornerRadius">24dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/secondary_translucent_container_bg</item>

        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

    <style name="Theme.FitFoodie" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="TextAppearance.Widget.FitFoodie.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textStyle">bold</item>
    </style>
</resources>
